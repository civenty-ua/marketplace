{% if items|length > 0 %}
    <div class="item-container">

        {% for item in items %}
            {% set template = '/blocks/item-panel/' ~ item.typeItem ~ '.html.twig' %}
            {% if item.typeItem == 'article' and item.typePage.code != 'article' %}
                {% set template = item.typePage.code ~ '/item/plate.html.twig' %}
            {% endif %}
            {% include template with {'item': item, 'wrapperTag': 'div' } %}
        {% endfor %}

    </div>
{% else %}
    <center>{{ 'item.no_found'|trans }}</center>
{% endif %}


<div class="navigation">
    {{ knp_pagination_render(items) }}
</div>

<div class="section">
    <h2 class="h2">{{ 'item.knowledge_base'|trans }}</h2>

    <div class="glide catalog-slider js-glide-knowledge-base">
        <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides">
                {% for category in categories %}
                    <li class="glide__slide">
                        <div class="catalog-item">
                            <img src="{% if category.image is empty %}{{ asset('images/item-default.png') }}{% else %} {{ category_image_asset(category, 'image') }} {% endif %}"
                                    alt="{{ category.name }}">
                            <a href="{{ path('category_detail', {'slug': category.slug}) }}">
                                <span>{{ category.name }}</span>
                                <svg>
                                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#arrow-right"></use>
                                </svg>
                            </a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="glide__bullets" data-glide-el="controls[nav]">
            {% for category in categories %}
                <button class="glide__bullet" data-glide-dir="={{ loop.index0 }}"></button>
            {% endfor %}
        </div>
    </div>

    <div class="desktop-catalog">
        <div class="catalog-item-container">
            {% for item in categories %}
                <div class="catalog-item">
                    <a href="{{ path('category_detail', {'slug': item.slug}) }}">
                        <img src="{% if item.image is empty %}{{ asset('images/item-default.png') }}{% else %}{{ category_image_asset(item, 'image') }}{% endif %}"
                             alt="{{ item.name }}"
                             loading="lazy"
                        >
                        <span>{{ item.name }}</span>
                        <svg>
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#arrow-right"></use>
                        </svg>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

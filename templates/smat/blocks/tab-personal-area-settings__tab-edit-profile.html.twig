                    <input type="tel"
                            value="+38 067 345 33 33"
                            name="phone"
                            data-name="phone"
                            placeholder="+38 ___ ___ __ __"
                            data-phone-mask="+38 000 000 00 00"
                    >
                </div>
                <div class="error">Текст ошибки текст ошибки</div>
            </div>

            <div class="field">
                <a class="btn-h40-green" href="#">
                    <span>Підтвердити телефон</span>
                </a>
            </div>

            <div class="field field-select">

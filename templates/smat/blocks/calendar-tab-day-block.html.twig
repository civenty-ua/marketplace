<div id="calendar_period_day" class="calendar-period">

    <div class="calendar-filters">
        <div class="calendar-filters__wrapper">
            <div class="calendar-filters__inner">
                <div class="calendar-filters__category">
                    <button class="btn-filter-category js-btn-calendar-category active" style="color:#D19000"
                            data-category="ORACS">
                        <span>ORACS</span>
                    </button>
                    <button class="btn-filter-category js-btn-calendar-category active" style="color:#D82D71"
                            data-category="Земля Таврії">
                        <span>Земля Таврії</span>
                    </button>
                </div>
                <div class="calendar-filters__all">
                    <button class="btn-h30-green-line js-btn-calendar-all-category">
                        <span>Усі категорії</span>
                    </button>
                </div>
                <button class="btn-wh40-light js-calendar-filters-hide">
                    <svg class="ico">
                        <use xlink:href="/images/smat/ico-close_24x24.svg#Layer_1"></use>
                    </svg>
                </button>
            </div>
            <div class="calendar-filters__overlay js-calendar-filters-hide"></div>
        </div>
        <div class="calendar-filters__toggler">
            <button class="btn-h40-green-line js-calendar-filters-show">
                <svg class="ico">
                    <use xlink:href="/images/smat/ico-filter_40x40.svg#Layer_1"></use>
                </svg>
                <span>Категорії</span>
            </button>
        </div>
    </div>

    <div class="calendar-content">
        <div class="calendar-day">
            <div class="calendar-day-content">
                <div class="calendar-day-content__day">
                    <div class="calendar-day-content__date">
                        <div class="calendar-day-content__date-num">17</div>
                        <div class="calendar-day-content__date-month">Травень</div>
                        <div class="calendar-day-content__date-day">понеділок</div>
                    </div>
                    <div class="calendar-day-content__day-events-list">
                        <div class="calendar-day-content__day-event active" style="color:#D82D71"
                                data-category="Земля Таврії">
                            <span class="calendar-day-content__day-event-time">17:00</span>
                            <span class="calendar-day-content__day-event-title">Вебінар «Основні вимоги харчового законодавства для первинних виробників і переробників»</span>
                        </div>
                        <div class="calendar-day-content__day-event active" style="color:#D19000" data-category="ORACS">
                            <span class="calendar-day-content__day-event-time">19:00</span>
                            <span class="calendar-day-content__day-event-title">Вебінар «Вирощування баштанних культур»</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
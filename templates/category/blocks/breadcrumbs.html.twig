<ul class="breadcrumbs">
    <li><a href="{{ path('home') }}">{{ 'home.home'|trans }}</a></li>
    <li><a href="{{ path('categories') }}">{{ 'menu.knowledge_base'| trans }}</a></li>
    <li>{{ category.name }}</li>
</ul>

<script type="application/ld+json">
    {
        "@context": "http://schema.org/",
        "@type": "BreadcrumbList",
        "itemListElement": [
            {
                "@type": "ListItem",
                "position": 1,
                "name": "{{ 'home.home'|trans }}",
                "item": "{{ url('home') }}"
            },
            {
                "@type": "ListItem",
                "position": 2,
                "name": "{{ 'menu.knowledge_base'| trans }}",
                "item": "{{ url('categories') }}"
            },
            {
                "@type": "ListItem",
                "position": 3,
                "name": "{{ category.name }}",
                "item": "{{ app.request.uri }}"
            }
        ]
    }
</script>

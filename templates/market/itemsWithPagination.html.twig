<div class="item-container">
    {% if items|length > 0 %}
        {% for item in items %}
            <div class="glide__slide">
                <div class="item">
                    {{ block('itemIteration') }}
                </div>
            </div>
        {% endfor %}
    {% else %}
        {{ emptyListTitle }}
    {% endif %}
</div>
<div class="navigation js-no-page-refresh-navigation">
    <input
        type="hidden"
        value="{{ currentPage }}"
        name="{{ paginationName }}"
    >
    {{ knp_pagination_render(items) }}
</div>

{% if user.userProperty.description|length > 0 %}
    <div>
        <h3 class="marginBottom20px fontSize17-20px">
            {{ user.userProperty.description|raw|nl2br }}
        </h3>
    </div>
{% endif %}
{% if not user.userProperty.videoId == '' %}
    <div class="embed-responsive embed-responsive-16by9">
        <iframe
            class="embed-responsive-item"
            src="https://www.youtube.com/embed/{{ user.userProperty.videoId }}?rel=0"
            allowfullscreen
        ></iframe>
    </div>
{% endif %}

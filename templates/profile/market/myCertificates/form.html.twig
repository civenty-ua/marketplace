{% extends 'profile/profileMarket.html.twig' %}
{%- block tabContent -%}

    {% import 'profile/market/roles/form_role_create.html.twig' as formMacros %}

    <div class="commodity-creating-form remove-actions {{ class ?? '' }}">
    {{ form_start(form) }}
    {% set formErrors = form.vars.errors.form.getErrors(true) %}

    {% if formErrors|length > 0 %}
        <ul class="errors-block">
            {% for error in formErrors %}
                <li>{{ error.message|trans }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    {{ formMacros.printCertificateRow(form) }}

    {{ form_end(form) }}
    </div>
{% endblock %}
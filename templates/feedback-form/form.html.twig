{% extends 'layout/content.html.twig' %}

{% block title %}
    {{ 'feedback_form.title'|trans }}
{% endblock %}

{% block body %}
    <div class="section">
        <div class="section__subtitle">
            {{ 'feedback_form.header'|trans|replace({
                '%ENTITY_TYPE%' : ('feedback_form.parent_item.'~item.typeItem)|trans,
                '%ENTITY_NAME%' : item.title
            }) }}
        </div>
        <div class="form-wrapper item-feedback-form">
            {{ form(form) }}
        </div>
    </div>
{% endblock %}
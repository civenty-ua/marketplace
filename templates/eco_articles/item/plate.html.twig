{% if wrapperTag is not defined %}
    {% set wrapperTag = 'li' %}
{% endif %}

<{{ wrapperTag }} class="glide__slide">
    <div class="item">
        <div class="item-image">
            <div class="item-badge article__badge">{{ item.typePage }}</div>
            <a href="{{ path('eco_articles_detail', {'slug': item.slug}) }}">
                <img src="{{ asset('upload/article/' ~ item.imageName) }}"
                     alt="{{ item.title }}"
                     loading="lazy"
                >
            </a>
        </div>
        <div class="item-title">
            <a href="{{ path('eco_articles_detail', {'slug': item.slug}) }}" title="{{ item.title }}">{{ item.title }}</a>
        </div>
        <div class="item-text">
            {{ item.short|striptags|u.truncate(100,'...') }}
        </div>
        {% set month = item.createdAt|date('M') %}
        {% set day = item.createdAt|date('d') %}
        {% set year = item.createdAt|date('Y') %}
        <div class="icon-text desktop">
            <i class="far fa-calendar"></i>
            <span>{{ '%s %s %s'|format(day,month|trans, year) }}</span>
        </div>
        <div class="icon-text desktop">
            <i class="far fa-eye"></i>
            <span>{{ 'item.views'|trans }}{{ ' ' ~ item.ViewsAmount }}</span>
        </div>
    </div>
</{{ wrapperTag }}>
